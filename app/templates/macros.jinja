{# Displays a box containing the relevant story information #}
{% macro story_list(stories) %}
  {% for story in stories %}
    <article>
      <a href="/story/{{ story.id }}">{{ story.title|e }}</a> by {{ story.author|e }}
      <br>
      <p>{{ story.last_update|e }}</p>
    </article>
  {% endfor %}
{% endmacro %}
